generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum TemperatureUnit {
  FAHRENHEIT
  CELSIUS
}

enum Theme {
  LIGHT
  DARK
  SYSTEM
}

model User {
  id                 String          @id @default(cuid())
  email              String          @unique
  password           String
  name               String?
  temperatureUnit    TemperatureUnit @default(FAHRENHEIT)
  theme              Theme           @default(SYSTEM)
  widgetPreferences  String?         @default("{\"hourly\":true,\"precipitation\":true,\"uv\":true,\"wind\":true,\"airQuality\":true,\"astronomy\":true}")
  locations          Location[]
}

model Location {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  latitude  Float
  longitude Float
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
}

